<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:layout_margin="20dp"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textResult"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:layout_margin="20dp"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:id="@+id/Clear"
            android:text="AC"
            android:textSize="28dp"
            android:textStyle="bold">
        </Button>

        <Button
            style="@style/buttonNumber"
            android:id="@+id/Backspace"
            android:text="BCK"
            android:textSize="33dp">
        </Button>
        <Button
            style="@style/buttonOperation"
            android:id="@+id/division"
            android:text="/"
            android:textSize="33dp"
            android:textStyle="bold">
        </Button>

    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="33dp"
            android:textStyle="bold">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="33dp">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="33dp">
        </Button>
        <Button
            android:id="@+id/multiply"
            style="@style/buttonOperation"
            android:text="X"
            android:textSize="33dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="33dp">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="33dp">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="33dp">
        </Button>
        <Button
            android:id="@+id/Plus"
            style="@style/buttonOperation"
            android:text="+"
            android:textSize="33dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="33dp">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="33dp">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="33dp">
        </Button>
        <Button
            android:id="@+id/Minus"
            style="@style/buttonOperation"
            android:text="-"
            android:textSize="48dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btndot"
            android:text="."
            android:textSize="33dp">
        </Button>
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn0"
            android:text="0"
            android:textSize="33dp">
        </Button>

        <Button
            style="@style/buttonNumber"
            android:id="@+id/equal"
            android:text="="
            android:textSize="33dp"
            android:background="@color/orange">
        </Button>
    </LinearLayout>
</LinearLayout>